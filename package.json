{
  "name": "postcss-at-rules-variables",
  "version": "0.0.25",
  "description": "PostCss plugin to use CSS Custom Properties in at-rule @each, @for, @if, @else ",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "lintjs": "eslint ./src/*.js ./test/*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "npm run lintjs && npm run lintmd",
    "test": "nyc ava",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src/ -d lib/",
    "prepublish": "npm run build",
    "update": "updtr && ava-codemods --force",
    "testen": "testen -n -- ava"
  },
  "testen": {
    "node": [
      "4",
      "5",
      "6"
    ]
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "plugins",
    "for",
    "if",
    "else",
    "each",
    "at-rules",
    "rules",
    "property"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GitScrum/postcss-at-rules-variables.git"
  },
  "author": {
    "name": "GitScrum",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.13.1",
    "postcss": "^5.0.21"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "ava-codemods": "^0.3.0",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-min": "^0.1.14",
    "babel-register": "^6.9.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.0.1",
    "eslint-config-xo": "^0.15.2",
    "eslint-formatter-pretty": "^1.0.1",
    "eslint-plugin-ava": "^3.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-markdown": "^1.0.0-beta.2",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-xo": "^1.0.0",
    "nyc": "^8.1.0",
    "testen": "^1.8.2",
    "updtr": "^0.2.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "comments": false,
    "compact": true,
    "minified": true
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "bugs": {
    "url": "https://github.com/gitscrum/postcss-at-rules-variables/issues"
  },
  "homepage": "https://github.com/gitscrum/postcss-at-rules-variables#readme"
}
