{
  "name": "postcss-at-rules-variables",
  "version": "0.1.4",
  "description": "PostCss plugin to use CSS Custom Properties in at-rule @each, @for, @if, @else ",
  "license": "MIT",
  "repository": "scrum/postcss-at-rules-variables",
  "homepage": "scrum/postcss-at-rules-variables#readme",
  "bugs": "scrum/postcss-at-rules-variables/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "prepush": "npm t",
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "nyc ava"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "plugins",
    "for",
    "if",
    "else",
    "each",
    "at-rules",
    "rules",
    "property"
  ],
  "dependencies": {
    "postcss": "^6.0.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "ava": "*",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.3.2",
    "babel-preset-minify": "^0.3.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.21",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-unicorn": "^4.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.2",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint",
    "*.md": "eslint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          },
          "useBuiltIns": true
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "plugin:unicorn/recommended",
      "xo"
    ],
    "rules": {
      "indent": [
        2,
        4,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
