{
  "name": "postcss-at-rules-variables",
  "version": "0.1.1",
  "description": "PostCss plugin to use CSS Custom Properties in at-rule @each, @for, @if, @else ",
  "license": "MIT",
  "repository": "gitscrum/postcss-at-rules-variables",
  "homepage": "gitscrum/postcss-at-rules-variables#readme",
  "bugs": "gitscrum/postcss-at-rules-variables/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"chore(changelog): Update changelog\"",
    "patch": "np patch --any-branch",
    "minor": "np minor --any-branch",
    "major": "np major --any-branch",
    "build": "rimraf lib && babel src -d lib",
    "prepublish": "npm run build",
    "lintjs": "eslint ./{src,test}/*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd",
    "test": "nyc ava"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "plugins",
    "for",
    "if",
    "else",
    "each",
    "at-rules",
    "rules",
    "property"
  ],
  "dependencies": {
    "postcss": "^6.0.1"
  },
  "devDependencies": {
    "ava": "*",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "conventional-changelog-cli": "^1.3.1",
    "conventional-changelog-lint": "^2.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.12.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-markdown": "^1.0.0-beta.4",
    "eslint-plugin-xo": "^1.0.0",
    "husky": "^0.14.3",
    "np": "^2.14.1",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "babili"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
