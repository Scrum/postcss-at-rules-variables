{
  "name": "postcss-at-rules-variables",
  "version": "0.0.17",
  "description": "PostCss plugin to use CSS Custom Properties in at-rule @each, @for, @if, @else ",
  "main": "./lib/index.js",
  "scripts": {
    "test": "xo ./src/*.js ./test/*.js && mocha --compilers js:babel-register ./test/*.js",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel --presets node5 src/index.js --out-file lib/index.js",
    "prepublish": "npm run build",
    "coverage": "babel-node ./node_modules/isparta/bin/isparta cover --report text node_modules/mocha/bin/_mocha --",
    "coveralls": "coveralls < coverage/lcov.info",
    "precoveralls": "npm run coverage",
    "update": "updtr"
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "for",
    "if",
    "else",
    "each",
    "at-rules",
    "property"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GitScrum/postcss-at-rules-variables.git"
  },
  "author": {
    "name": "Scrum"
  },
  "license": "MIT",
  "dependencies": {
    "balanced-match": "^0.3.0",
    "lodash": "^4.6.1",
    "postcss": "^5.0.19"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-node5": "^10.8.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "coveralls": "^2.11.8",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "updtr": "^0.1.7",
    "xo": "^0.13.0"
  },
  "babel": {
    "presets": [
      "node5"
    ]
  },
  "bugs": {
    "url": "https://github.com/gitscrum/postcss-at-rules-variables/issues"
  },
  "homepage": "https://github.com/gitscrum/postcss-at-rules-variables#readme"
}
