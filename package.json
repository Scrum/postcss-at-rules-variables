{
  "name": "postcss-at-rules-variables",
  "version": "0.0.21",
  "description": "PostCss plugin to use CSS Custom Properties in at-rule @each, @for, @if, @else ",
  "main": "lib/index.js",
  "files": "lib/index.js",
  "scripts": {
    "test": "eslint --format=node_modules/eslint-formatter-pretty ./src/*.js ./test/*.js && nyc ava",
    "clean": "rm -rf lib && mkdir lib",
    "build": "npm run clean && babel src/index.js --out-file lib/index.js",
    "prepublish": "npm run build",
    "update": "updtr && ava-codemods --force"
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "for",
    "if",
    "else",
    "each",
    "at-rules",
    "property"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GitScrum/postcss-at-rules-variables.git"
  },
  "author": {
    "name": "Scrum"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.8.2",
    "postcss": "^5.0.19"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "ava-codemods": "^0.2.1",
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-es2015-node6": "^0.2.0",
    "babel-register": "^6.7.2",
    "coveralls": "^2.11.9",
    "nyc": "^6.2.1",
    "updtr": "^0.1.10",
    "eslint": "^2.10.2",
    "eslint-config-xo": "^0.14.1",
    "eslint-formatter-pretty": "^0.2.2",
    "eslint-plugin-ava": "^2.3.1",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-xo": "^0.4.3"
  },
  "babel": {
    "presets": [
      "es2015-node6"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "xo",
      "babel",
      "require-path-exists"
    ],
    "extends": [
      "xo",
      "plugin:xo/recommended",
      "plugin:ava/recommended"
    ]
  },
  "bugs": {
    "url": "https://github.com/gitscrum/postcss-at-rules-variables/issues"
  },
  "homepage": "https://github.com/gitscrum/postcss-at-rules-variables#readme"
}
